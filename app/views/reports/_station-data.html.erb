<%=stylesheet_link_tag "reports/station_data" %>
<div class="template1">
  <section class="condition" id="condition">
    <div class="left">
      <p>Retrieve interval</p>
      <input type="text" id="date-begin" readonly=true/>
      <label>-</label>
      <input type="text" id="date-end" readonly=true/>
      <input type="button" value="Retrieve" id="retrieve" class="btn btn-primary"/>
    </div>
    <div class="right">
      <label>Export to</label>
      <a class="btn btn-success" id="export_to_excel">Excel</a>
    </div>
  </section>
  <section class="content">
       <div  id="data_container" style="width:100%;height:100%;border-width: 0px;"></div>
       <a class="setting-btn" id="setting-btn"><i class="icon icon-chevron-left"></i></a>
       <div class="setting-block" id="setting-block">
         <p><i class="icon icon-cog"></i> setting</p>
         <p>FTQ > FTQ target</p>
         <input type='text' class='color-picker' id="color1"/>
         <p>FTQ = FTQ target</p>
         <input type='text' class='color-picker' id="color2"/>
         <p>FTQ < FTQ target</p>
         <input type='text' class='color-picker' id="color3"/>
         <br />
         <p>DPV > DPV target</p>
         <input type='text' class='color-picker' id="color4"/>
         <p>DPV = DPV target</p>
         <input type='text' class='color-picker' id="color5"/>
         <p>DPV < DPV target</p>
         <input type='text' class='color-picker' id="color6"/>
       </div>
  </section>
  <section class="snaps" id="snap-groups">
    <% @snaps.each do |snap| %>
        <div class="snap-li" snap="<%= snap.id %>" type="<%= snap.type_string %>">
          <p><%= snap.desc %></p>
          <p><%= time_ago_in_words(snap.created_at.localtime) %> ago</p>
        </div>
    <% end %>
  </section>
</div>


