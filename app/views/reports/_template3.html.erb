<div class="template3">
  <div class="tag">CURRENT STATUS</div>
  <section class="content"  id="content">
     <div class="condition"></div>
     <div class="container"></div>
  </section>
  <section class="helper">
    <div class="snaps" id="snap-groups">
      <p class="title">Snapshots</p>
      <a class="btn btn-warning" id="snap-to-now">reset to current</a>
      <% @snaps.each do |snap| %>
          <div class="snap-li" snap="<%= snap.id %>" type="<%= snap.type_string %>">
            <div class="left">
              <p><%= snap.desc %></p>
              <p><%= time_ago_in_words(snap.created_at.localtime) %> ago</p>
            </div>
            <div class="right">
              <span class="big"></span>
              <span class="small"></span>
              <span class="small"></span>
            </div>
            <a class="remove"><i class="icon icon-trash"></i></a>
          </div>
      <% end %>
    </div>
    <div class="function">
      <p class="title">Exports</p>
    </div>
  </section>
</div>