<h1>Listing alerts</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>User</th>
    <th>Type</th>
    <th>Offset</th>
    <th>Alertable</th>
    <th>Alertable type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.topic %></td>
    <td><%= alert.user %></td>
    <td><%= alert.type %></td>
    <td><%= alert.offset %></td>
    <td><%= alert.alertable_id %></td>
    <td><%= alert.alertable_type %></td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

