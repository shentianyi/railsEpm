<!DOCTYPE html>
<html>
<head>
  <title>ClearInsight</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= render :partial => 'shares/user_guide_env' %>
<article class="wrap-main" id="wrap-main">
  <%= render :partial => 'shares/menu' %>
  <%= yield %>
</article>



<%= render :partial => 'shares/message_box' %>
<%= render :partial => 'shares/slide_box' %>



<% if need_guide %>
    <%= render :partial => 'shares/user_guide' %>
<% end %>

</body>
<script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
    $.ajaxSetup({
        statusCode: {
            403: function () {
                alert('403 Forbidden');
            },
            404: function () {
                alert('404 Not Found');
            },
            500:function(){
                alert('500 Internal Server Error');
            }
        }
    });
</script>
<%= yield :javascript_includes %>
</html>
