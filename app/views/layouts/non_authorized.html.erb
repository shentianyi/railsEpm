<!DOCTYPE html>
<html>
<head>
  <title>IFEpm</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrap-page">
  <div class="page-top">
    <img src="/assets/headicon.png"/>
    <label class="company-name">BrillianTech</label>
  </div>
  <div class="page-navi clearfix">
    <h3 class="text-center"><%= @title %></h3>
  </div>
  <% if flash[:notice]!=nil || flash[:alert]!=nil %>
      <div class="alert <%=flash[:notice]==nil ? '':'alert-success' %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice]||flash[:alert] %>
      </div>
  <% end %>

  <div class="login-sub-middle clearfix">
    <%= yield %>
  </div>
</div>
<%= render :partial=>'shares/message_box'%>

</body>
 <script type="text/javascript">
           I18n.defaultLocale = "<%= I18n.default_locale %>";
           I18n.locale = "<%= I18n.locale %>";
  </script>
</html>
