<!DOCTYPE html>
<html>
<head>
  <title>ClearInsight</title>
  <%= stylesheet_link_tag "doorkeeper/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<section id="main" class="container">
  <div class="topbar">
    <div class="fill">
      <div class="container">
          <span class="brand">
             OAuth2 Provider
          </span>
         <span class="brand" style="float: right;">
           <a href="/" style="text-decoration: none;"><span style="color: #5688A9">ClearInsight Home</span></a>
          </span>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="row">
      <% flash.each do |key, message| %>
          <div class="span16">
            <div class="alert-message <%= key %>" data-alert><a class="close" href="#">Ã—</a>

              <p><%= message %></p></div>
          </div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</section>
</body>
</html>
