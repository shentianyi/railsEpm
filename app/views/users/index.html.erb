<%=stylesheet_link_tag "users/index" %>
<section class="manage_three_column" id="manage_three_column">
  <div class="left">
    <div class="header" id="left-content-title">
      <p class="current-group-item"><%= t 'manage.user.desc.manage' %></p>
    </div>
    <div class="manage-left-content" id="manage-left-content">
      <%= render :partial => 'roles/left_menu' %>
      <div class="right"  id="manage-right-content">
        <div class="manage-right-list">
          <div class="right-list-top-control" id="right-list-top-control" name="group">
            <input type="checkbox" id="manage-total-check"/>
            <a class="btn" id="manage-item-remove"><%= t 'manage.base.delete_btn' %></a>
            <a class="btn" id="manage-user-edit"><%= t 'manage.base.edit_btn' %></a>
          </div>
          <div id="user-item-container">
            <%= render partial: 'list' %>
          </div>
        </div>

        <div class="manage-user-add" id="user-edit" general="manage-user-add" style="display: none">
          <i class="icon-remove" id="close-user-edit" general="close-user"></i>
          <div>
            <input type="text" placeholder="* <%= t 'manage.user.new.name' %>" id="edit-user-name" general="user-name"/>
            <input type="text" placeholder="* <%= t 'manage.user.new.email' %>" id="edit-user-mail" general="user-mail"/>
            <input type="text" placeholder="<%= t 'manage.user.new.title' %>" id="edit-user-title" general="user-title"/>
            <input type="text" placeholder="<%= t 'manage.user.new.tel' %>" id="edit-user-tel" general="user-tel"/>
            <input type="text" placeholder="<%= t 'manage.user.new.phone' %>" id="edit-user-phone" general="user-phone"/>
            <input type="password" placeholder="<%= t 'manage.user.new.pwd' %>" id="edit-user-password" general="user-password"/>
            <div class="div-select">
              <select data-placeholder="<%= t 'manage.user.new.entity' %>" id="edit-entity-for-kpi" class="single-select">
                <option value=""></option>
                <% @data_points.each do |data_point| %>
                    <option value="<%= data_point.id %>"><%= data_point.name %></option>
                <% end %>
              </select>
            </div>
            <label>
              <input type="radio" name="edit-user-role" data-name="General" data-role="1" value="<%= Role.user %>" checked>
              <%= t 'manage.user.role.user' %>
            </label>
            <label>
              <input type="radio" name="edit-user-role" data-name="General Manager" data-role="3" value="<%= Role.director %>">
              <%= t 'manage.user.role.director' %>
            </label>
            <label>
              <input type="radio" name="edit-user-role" data-name="Administrator" data-role="4" value="<%= Role.admin %>">
              <%= t 'manage.user.role.admin' %>
            </label>
            <input type="submit" value="Ok" class="btn btn-primary" id="manage-user-edit-old"/>
          </div>
        </div>

      </div>

    </div>
  </div>
  <div class="right">
    <section class="solid">
      <h3><%= t 'manage.user.desc.create' %></h3>
      <p><%= t 'manage.user.desc.create_desc' %></p>
      <a class="btn btn-primary" id="add-user-show"><%= t 'manage.user.desc.create_now' %></a>
    </section>
    <section class="solid">
      <h3><%= t 'manage.user.desc.assign' %></h3>
      <p><%= t 'manage.user.desc.assign_desc' %></p>
      <a class="btn btn-primary" id="manage-user-delivery"><%= t 'manage.user.desc.assign_now' %></a>
    </section>
    <section class="solid">
      <h3><%= t 'manage.user.desc.what-is-manager-title' %></h3>
      <p><%= t 'manage.user.desc.what-is-manager' %></p>
    </section>
    <section class="solid">
      <h3><%= t 'manage.user.desc.what-is-user-title' %></h3>
      <p><%= t 'manage.user.desc.what-is-user' %></p>
    </section>
  </div>
</section>









<div class="manage-user-add create-user" id="manage-user-add" general="manage-user-add">
  <i class="icon-remove" id="close-add-user" general="close-user"></i>

  <div>
    <input type="text" placeholder="* <%= t 'manage.user.new.name' %>" id="new-user-name" general="user-name"/>
    <input type="text" placeholder="* <%= t 'manage.user.new.email' %>" id="new-user-mail" general="user-mail"/>
    <input type="text" placeholder="<%= t 'manage.user.new.title' %>" id="new-user-title" general="user-title"/>
    <input type="text" placeholder="<%= t 'manage.user.new.tel' %>" id="new-user-tel" general="user-tel"/>
    <input type="text" placeholder="<%= t 'manage.user.new.phone' %>" id="new-user-phone" general="user-phone"/>
    <input type="password" placeholder="* <%= t 'manage.user.new.pwd' %>" id="new-user-password"/>
    <input type="password" placeholder="* <%= t 'manage.user.new.pwd_con' %>" id="new-user-password-confirm"/>

    <div class="div-select">
      <select data-placeholder="<%= t 'manage.user.new.entity' %>" id="entity-for-kpi" class="single-select">
        <option value=""></option>
        <% @data_points.each do |data_point| %>
            <option value="<%= data_point.id %>"><%= data_point.name %></option>
        <% end %>
      </select>
    </div>
    <label>
      <input type="radio" name="user-role" data-name="General" data-role="1" value="<%= Role.user %>" checked>
      <%= t 'manage.user.role.user' %>
    </label>
    <label>
      <input type="radio" name="user-role" data-name="General Manager" data-role="3" value="<%= Role.director %>">
      <%= t 'manage.user.role.director' %>
    </label>
    <label>
      <input type="radio" name="user-role" data-name="Administrator" data-role="4" value="<%= Role.admin %>">
      <%= t 'manage.user.role.admin' %>
    </label>
    <input type="submit" value="<%= t 'manage.base.add_btn' %>" class="btn btn-primary" id="manage-user-add-new"/>
  </div>
</div>



<div class="assign-kpi-wrap" id="assign-kpi-wrap">
  <div id="assign-kpi" class="assign-kpi" special="user">

    <div class="assign-kpi-left" special="user" id="assign-kpi-options">
      <div class="select-div" style="left: 35%; width: 300px;">
        <select class="chosen-select" data-placeholder="* <%= t 'manage.user.desc.select_kpi_categroy' %>" id="kpi-category">
        </select>
        <input type="button" value="<%= t 'manage.base.assign_all_kpi' %>" class="btn btn-primary" style="width: 75px; display: inline-block;" id="assign-kpi-category-btn"/>
      </div>

      <ul id="assign-kpi-list">

      </ul>
    </div>
    <div class="assign-kpi-right" id="assign-kpi-right">
      <div class="select-div">
        <select data-placeholder="* <%= t 'manage.user.desc.select_user' %>" class="chosen-select" style="width:180px;" id="assign-kpi-user">
          <option></option>
          <% @users.each_with_index do |user, i| %>
              <option value="<%= user.id %>"><%= user.email %></option>
          <% end %>
        </select>
      </div>
      <div id="assign-kpi-inner" class="assign-kpi-inner">
      </div>
    </div>
    <div class="assign-kpi-bottom">
      <p><%= t 'manage.user.desc.assign' %></p>
      <a class="btn btn-primary" id="assign-kpi-cancel"><%= t 'manage.base.finish' %></a>
    </div>
  </div>
</div>


