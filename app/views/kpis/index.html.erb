<%= render :partial=>'kpi_categories/left_menu'%>
<%= render :partial=>'kpis/new'%>
<div class="manage-right-content" id="manage-right-content">

     <div class="manage-btn-group" id="manage-btn-group">
          <a class="btn btn-primary" id="kpi-add-show"><i class="icon-plus"></i> KPI</a>
          <a class="btn btn-primary kpi-library-btn" id="kpi-library-btn"><i class="icon-th-list"></i><%= t 'manage.kpi.kpi_library'%></a>
          <p id="manage-edit-target" >

          </p>
          <i class="icon-pencil"></i>
          <input type="text"/>
          <span><%= t 'manage.base.enter_confirm'%>&nbsp;&nbsp;&nbsp;&nbsp;<%= t 'manage.base.esc_cancel'%></span>
     </div>

     <div class="manage-right-list">
          <div class="right-list-top-control" id="right-list-top-control">
               <input type="checkbox" id="manage-total-check"/>
               <a class="btn" id="manage-item-remove"><%= t 'manage.base.delete_btn'%></a>
               <a class="btn" id="manage-item-edit"><%= t 'manage.base.edit_btn'%></a>
          </div>

          <ul id="manage-sort-list" class="manage-sort-list">
               <%@kpis.each_with_index do |kpi,i|%>
               <li id="<%= kpi.id%>">
                    <p class="sort-handle">
                         :
                    </p>
                    <input type="checkbox" />
                    <table class="category">
                      <tr>
                        <td title='<%= kpi.name%>'><%= kpi.name%></td>
                        <td ><%= KpiFrequency.get_desc_by_value(kpi.frequency)%></td>
                        <td ><%= KpiDirection.get_desc_by_value(kpi.direction)%></td>
                        <td class="manage-kpi-target">
                          <span class="can-change"><%= KpiUnit.parse_entry_value(kpi.unit, kpi.target_max)%></span><span><%= KpiUnit.get_entry_unit_sym(kpi.unit)%></span>
                          <input type='text' effect_on="<%= kpi.id%>"/>
                        </td>

                        <td class="manage-kpi-target">
                          <span class="can-change"><%= KpiUnit.parse_entry_value(kpi.unit, kpi.target_min)%></span><span><%= KpiUnit.get_entry_unit_sym(kpi.unit)%></span>
                          <input type='text' effect_on="<%= kpi.id%>"/>
                        </td>

                        <%if kpi.is_calculated%>
                            <td title="<%= kpi.formula_string%>"><%= kpi.formula_string%></td>
                        <%else%>
                            <td><%= t 'manage.kpi.not_calculate_type'%></td>
                        <%end%>
                      </tr>
                      <tr>
                        <td title='<%= kpi.description%>'><%= kpi.description%></td>
                        <td><%= t 'manage.kpi.frequency'%></td>
                        <td><%= t 'manage.kpi.trend'%></td>
                        <td><%= t 'manage.kpi.target'%></td>
                        <td><%= t 'manage.kpi.target_min'%></td>
                        <td><%= t 'manage.kpi.calculate_type'%></td>
                      </tr>
                    </table>
               </li>
            <%end%>
          </ul>

     </div>
</div>

<div class="kpi-library" id="kpi-library">
     <div>
          <div class="kpi-library-inner">
               <div class="left Accordion" id="kpi-library-inner-left">
                    
               </div>
               <div class="right">
                    <ul class="library-chosen-kpi" id="library-chosen-kpi">

                    </ul>
                    <div>
                         <a class="btn" id="library-cancel"><%= t 'manage.base.cancel_btn'%></a>
                         <a class="btn btn-primary" id="library-add"><%= t 'manage.base.add_btn'%></a>
                    </div>
               </div>
          </div>
     </div>
</div>

<script type="text/javascript">
     $(document).ready(function() {
          MANAGE.init();
          MANAGE.kpi.init();
     })
</script>
