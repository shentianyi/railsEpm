<div class="kpi-library"  type="attribute" for="kpi" id="add-new-kpi-block">
  <div >
    <i class="icon icon-remove" id="remove-new-kpi-block"></i>
    <div class="select-div">
      <select style="width:242px;" data-placeholder="* Category" class="chosen-select"  id="new-kpi-category" >

      </select>
    </div>
    <input type="text" placeholder="* <%= t 'manage.kpi.name'%>" id="new-kpi-name"/>
    <textarea placeholder=" <%= t 'manage.kpi.description'%>" id="new-kpi-desc"></textarea>
    <div class="select-div">
      <select style="width:242px;" class="chosen-select" data-placeholder="* <%= t 'manage.kpi.frequency'%>" id="add-interval" name="frequency"></select>
    </div>
    <input type="text" placeholder="* <%= t 'manage.kpi.target'%>" id="new-kpi-target"/>
    <input type="text" placeholder="* <%= t 'manage.kpi.target_min'%>" id="new-kpi-target-low"/>
    <div class="select-div">
      <select style="width:242px;" class="chosen-select" data-placeholder="* <%= t 'manage.kpi.unit'%>" id="add-unit" name="unit">

      </select>
    </div>

    <div class="select-div">
      <select style="width:242px;" class="chosen-select" data-placeholder="* <%= t 'manage.kpi.trend'%>" id="add-trend" name="direction">

      </select>
    </div>

    <div class="auto-form-label" id="auto-form-label">
      <ul>
        <li><input placeholder="标签"/></li>
      </ul>
    </div>
    <label class="instrument-form-label">回车形成属性</label>
    <div class="is-calculate-block">

      <input type="checkbox" id="is-calcu-check"/>
      <label><%= t 'manage.kpi.is_calculate_type'%></label>

      <div class="calculate-type-box" id="calculate-type-box">
        <div class="select-div">
          <select class="chosen-select" data-placeholder="* <%= t 'manage.kpi.list'%>" id="is-calcu-relate" name="base">

          </select>
        </div>
        <label sign="+">+</label>
        <label sign="-">-</label>
        <label sign="*">x</label>
        <label sign="/">/</label>
        <label sign="(">(</label>
        <label sign=")">)</label>
        <textarea type="text" placeholder="* <%= t 'manage.kpi.formula'%>" id="calcuType-input"></textarea>
        <div style="display:none" id="takeCal" cal></div>
      </div>

    </div>


    <div class="btn-group">
      <a class="btn btn-small"  id="cancel-new-kpi-block">取消</a>
      <a class="btn btn-primary btn-small" id="manage-kpi-add-new">创建</a>
    </div>

  </div>
</div>




