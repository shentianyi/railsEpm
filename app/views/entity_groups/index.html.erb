<div class="sub-middle sub-middle-manage">
     <h3 class="text-center">管理我的观察点 </h3>
</div>
<div class="middle clearfix">
     <%= render :partial=>'entity_groups/left_menu'%>
     <div class="right-content pull-left clearfix" id="right-content">
          <!--delivery part-->
          <div class="delivery-part">
               <p class="inline">
                    组织
               </p>
               <%= select_tag :entity_id,options_from_collection_for_select(@entities,'id','name'),{ :class=>"delivery-kpi", :id=>"delivery-view"}%>
               <a class="btn btn-wzx btn-primary pull-right" onclick="delivery_view()">分配</a>
          </div>
          <h3 class="normal-blue text-center delivery-mykpiMark">该观察点下的组织</h3>
          <table class="manage-kpi" id="kpi-table">
               <tr>
                    <th>ID</th>
                    <th>组织</th>
                    <th>操作</th>
               </tr>
               <%if @user_group_entities
               @user_group_entities.each_with_index do |entity,i|%>
               <tr id="<%=entity.entity_group_item_id%>">
                    <td align="center" class="kpi-order-id"><%=i+1%></td>
                    <td align="center" class="kpi-order-entity"><%=entity.name%></td>
                    <td align="center"><div class="manage-operate manage-operate-del" data-belong="<%=entity.entity_group_item_id%>" onclick="remove_viewEntity(event)"></div></td>
               </tr>
               <% end;end%>
          </table>
     </div>
</div>
<input type="hidden" value="<%=@active_entity_group_id%>" id="entity_group_id" />
<script type="text/javascript">
    $(document).ready(function(){
        init_manage();
    })
</script>