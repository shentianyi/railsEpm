      <div class="item attachment">
        <div class="avatar">
          <p class="name">wangzixiao</p>
          <p class="time">2014-01-01</p>
        </div>
        <div class="attachments"></div>
        <div class="operate"><i class="icon icon-remove"></i></div>
      </div>
    </div>
    <div class='bottom'>
      <a class="btn"><i class="icon  icon-upload"></i></a>
      <input type="text" />
      <i class="icon icon-reply reply"></i>
    </div>
  </aside>
  <div class="bottom">
    <p>some basic info</p>
  </div>
</div>
