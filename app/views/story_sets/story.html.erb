<div class="story-set-show">
  <div class="left">
    <div class="header">
      <a href="<%= story_sets_path %>"><i class=" icon-chevron-left"></i> back</a>

      <p><%= @story_set.title %></p>
    </div>
    <div class="content" id="story-content-div">

    </div>
  </div>
  <div class="right">
    <div class="holder">
      <div class="avatar">
        <a>
          <image src='<%= @story_set.user.image %>' width='60px'/>
        </a>
      </div>
      <div class="title">
        <p><%= @story_set.user.first_name %></p>

        <p><%= @story_set.user.title %></p>
      </div>

      <div class="btn-area">
        <a class="btn btn-success icon icon-plus" href="/kpi_entries/analyse/<%= @story_set.id %>"> Insight</a>
      </div>
    </div>
    <div class="participate">
      <p>All Insights</p>
      <% @stories.each do |story| %>
          <div class="item show-story-detail-item" story='<%= story.id %>'>
            <div class="avatar">
              <a>
                <image src='<%= story.user_avatar %>' width='50px'/>
              </a>
            </div>
            <div class="title">
              <p><span><%= story.user_name %></span><span><%= story.user_title %></span></p>

              <p><%= story.title %></p>

              <p>
                <span><%= time_ago_in_words(story.created_at.localtime) %> ago</span><span>comments: <%= story.comment_count %></span>
              </p>
            </div>
          </div>
      <% end %>
    </div>
  </div>

</div>
<% content_for :javascript_includes do %>
    <%= javascript_include_tag "highstock.js" %>
    <%= javascript_include_tag "high_chart_template_analytic.js" %>
    <%= javascript_include_tag "Analytics_init.js" %>
    <%= javascript_include_tag 'magnific.popup/jquery.magnific-popup.min' %>
<% end %>

<% content_for :stylesheet_includes do %>
    <%= stylesheet_link_tag 'magnific.popup/magnific-popup' %>
<% end %>
<input type="hidden" value="<%= @story_set.id %>" id="current_story_set">
<input type="hidden" value="<%= @default_story_id %>" id="default_story_id">

<%= render partial: 'stories/create' %>

