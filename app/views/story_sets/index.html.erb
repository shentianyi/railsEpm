<%=stylesheet_link_tag "story_sets/index" %>
<div class="story-set-index">
  <div class="left-part">
    <div class="area">
      <div class="title">
        <p>All My Discussions</p>
        <a class="btn btn-primary" href="/story_sets/new">Create Discussion</a>
      </div>

      <div class="projects">
        <% @story_sets.each do |story_set| %>
            <a class="item" href="<%= story_story_set_path(story_set) %>">
              <span>
                <i class="icon icon-comments"></i>
              </span>
              <span>
                <p title="<%= story_set.title %>"><%= story_set.title %></p>
                <p title="<%= story_set.description %>"><%= story_set.description %></p>
              </span>
              <span>
                <i class="icon icon-chevron-right"></i>
              </span>
            </a>
        <% end %>
      </div>
    </div>
  </div>
  <div class="right-part">
    <div class="area" id="latest-notice">
      <p class="title">Latest Actions</p>
      <% @messages.each do |msg| %>
          <div class="item" content="<%= msg.content_display %>">
            <p>
              <a href="<%= msg.link %>" class="name"> </a>
              <a href="<%= msg.link %>" class="word"> </a>
            </p>
            <p><%= time_ago_in_words(Time.at(msg.created_at_dispaly.to_i).localtime) %></p>
          </div>
      <% end if @messages %>
    </div>
  </div>
</div>

