<ul class="entry-left-menu" id="entry-left-menu">
     <li>
          <%= t 'entry.desc.entry'%>
     </li>
     <div class="btn btn-primary upload-kpi-btn" id="upload-kpi-btn">
          上传KPI
     </div>
     <li class="<%= 'active' if @f==KpiFrequency::Hourly%>" interval="90" show_section="hour">
          <a  href="/kpi_entries/new?f=<%= KpiFrequency::Hourly%>"><%= t 'manage.kpi.freq_item.hourly'%></a>
     </li>
     <li class="<%= 'active' if @f==KpiFrequency::Daily%>" interval="100" show_section="day">
          <a  href="/kpi_entries/new?f=<%= KpiFrequency::Daily%>"><%= t 'manage.kpi.freq_item.daily'%></a>
     </li>
     <li class="<%= 'active' if @f==KpiFrequency::Weekly%>" interval="200" show_section="day">
          <a  href="/kpi_entries/new?f=<%= KpiFrequency::Weekly%>"><%= t 'manage.kpi.freq_item.weekly'%></a>
     </li>
     <li class="<%= 'active' if @f==KpiFrequency::Monthly%>" interval="300" show_section="month">
          <a  href="/kpi_entries/new?f=<%= KpiFrequency::Monthly%>"><%= t 'manage.kpi.freq_item.monthly'%></a>
     </li>
     <li class="<%= 'active' if @f==KpiFrequency::Quarterly%>" interval="400" show_section="month">
          <a  href="/kpi_entries/new?f=<%= KpiFrequency::Quarterly%>"><%= t 'manage.kpi.freq_item.quarterly'%></a>
     </li>
     <li class="<%= 'active' if @f==KpiFrequency::Yearly%>" interval="500" show_section="year">
          <a   href="/kpi_entries/new?f=<%= KpiFrequency::Yearly%>" ><%= t 'manage.kpi.freq_item.yearly'%></a>
     </li>
</ul>

<div class="entry-right-content">
     <div class="entry-block">
          <i class="icon-chevron-left" id="entry-minus"></i>
          <input type="text" readonly=true id="entry-date-picker"/>
          <i class="icon-chevron-right" id="entry-plus"></i>
          <span id="entry-date-extra"></span>
     </div>
     <ul class="entry-sort-list" id="entry-sort-list">

     </ul>
</div>

<div class="modal-outer" id="upload-kpi">
     <div class="upload-kpi modal-inner">
          <i class="icon-remove" id="upload-kpi-close"></i>
          <a class="btn btn-primary download-btn">下载模板</a>
          <hr />
          <div class="content">
               <div class="upload-file">
                    <a class="btn btn-primary upload-btn" onclick="$('#kpi-entry-uploader').click()">上传模板(最大为20M)</a>
                    <input id="kpi-entry-uploader" class="kpi-entry-upload" type="file" style="display: none;" multiple="true" data-url="/kpi_entries/import" name="files[]">
                    <div id="kpi-entry-uploader-preview">
                    </div>
               </div>
          </div>
          <p class="upload-parsing" id="parsing-load">
               支持格式excel、csv
          </p>
          <div class="btn upload-finish" id="upload-kpi-finish">
               完成
          </div>
     </div>
</div>

<div class="modal-outer false-alert" id="false-alert">
  <div class="modal-inner false-alert-inner">
    <i class="icon-remove" id="false-close"></i>
    <label class="title">错误</label>
    <p>您在上传中出现了错误，无法完成上传</p>
    <p><a href="" id="error-report">点击这里</a>下载错误报告，帮助您正确上传</p>
    <div class="btn false-close-btn" id="false-close-btn">
      关闭
    </div>
  </div>
</div>

<input type="hidden" value="<%= @f%>" id="kpi-type-hidden" />
<script>
     $(document).ready(function() {
          ENTRY.init();
          kpi_entry_upload();
     })
</script>

<% content_for :javascript_includes do%>
<%= javascript_include_tag "jquery.ui/jquery-ui-1.10.3.custom.min.js"%>
<%= javascript_include_tag "jquery.file.upload/jquery.fileupload.js"%>
<%= javascript_include_tag "kpi_entry_upload.js"%>
<% end %>