<div class="sub-middle sub-middle-manage">
     <h3 class="text-center">输入KPI </h3>
</div>
<div class="middle clearfix">
     <label class="inline pull-left entryKPI-intervalMark" >KPI周期</label>
     <ul class="nav nav-tabs entry-nav-tabs" id="entry-date-type">
          <!--  <li data-type="hour" class="<%='active' if @f=='hourly'%>">
          <a href="/kpi_entries/new?f=hourly">小时</a>
          </li> -->
          <li data-type="day" class="<%= 'active' if @f==KpiFrequency::Daily%>">
               <a  href="/kpi_entries/new?f=<%= KpiFrequency::Daily%>">日</a>
          </li>
          <li data-type="week" class="<%= 'active' if @f==KpiFrequency::Weekly%>">
               <a  href="/kpi_entries/new?f=<%= KpiFrequency::Weekly%>">周</a>
          </li>
          <li data-type="month" class="<%= 'active' if @f==KpiFrequency::Monthly%>">
               <a  href="/kpi_entries/new?f=<%= KpiFrequency::Monthly%>">月</a>
          </li>
          <li data-type="quarter" class="<%= 'active' if @f==KpiFrequency::Quarterly%>">
               <a  href="/kpi_entries/new?f=<%= KpiFrequency::Quarterly%>">季度</a>
          </li>
          <li data-type="year" class="<%= 'active' if @f==KpiFrequency::Yearly%>">
               <a   href="/kpi_entries/new?f=<%= KpiFrequency::Yearly%>" >年</a>
          </li>
     </ul>
     <div class="entry-kpi-part">
          <img src="/assets/calendar.png" style="margin:16px 0 0 18px;"/>
          <a class="entry-prev-btn entry-btn hide" id="entry-prev-btn" onclick="minus_unit(event)"></a>
          <input type="text" id="entry-kpi" class="entry-kpi-date" readonly="true" />
          <label class="show-weekOfYear inline-block" id="show-weekOfYear" style="display:none">第<span></span>周</label>
          <div class="week-picker hide"></div>
          <a class="entry-next-btn entry-btn hide" id="entry-next-btn" onclick="plus_unit(event)"></a>
          <select id="select-quarter" class="entry-selectQuarter hide">
               <option data-order="1">第一季度</option>
               <option data-order="2">第二季度</option>
               <option data-order="3">第三季度</option>
               <option data-order="4">第四季度</option>
          </select>
          <table class="entry-table">
               <tr>
                    <th>ID</th>
                    <th>类别</th>
                    <th>名称</th>
                    <th width="450px;">描述</th>
                    <th>目标</th>
                    <th>现在</th>
                    <th>完成度</th>
               </tr>
               <%@user_kpis.each_with_index do |kpi,i|%>
               <tr id="<%= kpi.id%>">
                    <td align="center" class="kpi-order-id"><%= i+1%></td>
                    <td align="center"><%= kpi.category_name%></td>
                    <td align="center"><%= kpi.name%></td>
                    <td align="center"><%= kpi.description%></td>
                    <td align="center" class="kpi-target"><%= KpiUnit.parse_entry_value(kpi.unit, kpi.target)%></td>
                    <td align="center">
                    <input data-target="2000" class="entry-kpi-current" data-belong="kpi1" source type="text" onkeyup="entry_kpiCurrent(event)" onblur="fill_kpiCurrent(this)"/>
                    </td>
                    <td align="center" class="entry-kpiPercent "></td>
               </tr>
               <%end%>
          </table>
     </div>
</div>
<script type="text/javascript">
     $(document).ready(function() {
          init_entryKpi();
     })
</script>
