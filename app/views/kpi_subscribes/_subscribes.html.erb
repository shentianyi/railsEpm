<ul id="manage-sort-list" class="manage-sort-list">
  <% @kpis.each do |kpi| %>
      <li id="<%= kpi.id %>">
        <table class="category" special="my-kpi">
          <tr>
            <td title='<%= kpi.name %>'><%= kpi.name %></td>
            <td>
              <div class="subscribe-wrap" style="width:100%;overflow-x:auto">
                  <% kpi.kpi_subscribes.each do |ks| %>
                    <span><%= ks.description %> <i value="<%= ks.id%>" class="icon icon-remove subscribe-remove"></i></span>
                  <% end %>
              </div>

            </td>
            <td>
              <a class="btn btn-success" href="/kpi_subscribes/new/<%= kpi.id%>"><%= t 'subscription.add'%></a>
            </td>
          </tr>
          <tr>
            <td title='<%= kpi.description %>'><%= kpi.description %></td>
            <td><%= t 'subscription.subscription'%></td>
            <td></td>
          </tr>
        </table>
      </li>
  <% end if @kpis %>
</ul>
