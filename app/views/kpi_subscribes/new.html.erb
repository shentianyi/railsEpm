<div class="story-set-new">
  <p>新建KPI订阅</p>
  <div class="divide"></div>
  <div class="form">
    <input style="margin: 5px" type="text" value="<%= @kpi.name %>" id="kpi-id" kpi-id="<%=@kpi.id%>" disabled />
    <select id="entity-groups" style="height: 30px; width:230px; margin: 5px;">
      <% @entity_groups.each do |entity_group| %>
          <option value="<%= entity_group.id %>"><%= entity_group.name %></option>
      <% end %>
    </select>
    <select style="height: 30px; width:230px;margin: 5px" id="alert-type">
      <% SubscribeAlert.list_type.each do |menu|%>
      <option><%= menu%></option>
      <%end%>
    </select>
    <input style="margin: 5px" type='text' id="value" placeholder="Value" />
    <ul id="alert-list" style="margin: 5px">
    </ul>

    <input style="margin: 5px" type='text' id="start-time" placeholder="Start" />
    <input style="margin: 5px" type='text' id="end-time" placeholder="End" />

    <a class="btn btn-primary" id="story-create-btn" onclick="MANAGE.kpi_subscribe.create()">create</a>
    <%= link_to 'cancel', mine_kpi_subscribes_path,:class=>"btn" %>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        MANAGE.kpi_subscribe.init_new();
    })
</script>
<% content_for :javascript_includes do %>
    <%= javascript_include_tag "kpi_subscribe_manage.js" %>
<% end %>
