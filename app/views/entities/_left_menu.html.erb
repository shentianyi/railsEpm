
<ul class="manage-left-menu" id="manage-left-menu" type="group">
    <li>Manage User</li>
    <li id="manage-menu-add">
        <input type="text"/>

        <span><i class="icon-plus"></i> 部门</span>


        <p class="manage-add-tooltip">Enter: confirm <br/>Esc: cancel</p>
    </li>


    <%@entities.each do |entity|%>
    <li class="<%= entity.id==@active_entity_id ? 'active' : ''%>" title="<%= entity.name %>" number="<%= entity.id%>">
        <i class="icon-trash icon-item"></i>
        <a href="../users?p=<%=entity.id%>"><%= entity.name %></a>
    </li>
    <%end%>
</ul>