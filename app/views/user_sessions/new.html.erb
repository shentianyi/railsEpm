<div class="page-navi login-pageNavi relative">
     <a class="btn btn-wzx btn-primary" href='/subscriptions/new'><%= t 'auth.view.sign_title'%></a>
</div>
<% if @user_session && @user_session.errors.any? %>
<div id="error_explanation" class="error_explanation ">
     <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
          <li>
               <%= msg %>
          </li>
          <% end %>
     </ul>
</div>
<% end %>
<%= form_for @user_session, :url=>user_sessions_path, :html=>{:class=>'login-form'} do |f| %>
<label for="user_session_email"><%= t 'auth.view.email'%></label>
<%= f.text_field(:email) %>
<label for="user_session_password"><%= t 'auth.view.pwd'%></label>
<%= f.password_field(:password ) %>
<input type="submit" class="btn btn-wzx btn-success pull-right" value="<%= t 'auth.view.submit_btn'%>"/>
<% end %>